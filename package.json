{
  "name": "ng-ssr-on-aws-lambda",
  "version": "0.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jhmt/ng-ssr-on-aws-lambda.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:client-and-server-bundles": "ng build --prod && ng build --prod --app 1 --output-hashing=false",
    "build:client-and-server-bundles-dev": "ng build --prod --base-href /dev/ && ng build --prod --app 1 --output-hashing=false --base-href /dev/",
    "build:client-and-server-bundles-prod": "ng build --prod --base-href /prod/ && ng build --prod --app 1 --output-hashing=false --base-href /prod/",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "build:ssr-dev": "npm run build:client-and-server-bundles-dev && npm run webpack:server",
    "build:ssr-prod": "npm run build:client-and-server-bundles-prod && npm run webpack:server",
    "webpack:server": "webpack --config ssr/webpack.server.config.js --progress --colors",
    "serve:prerender": "cd dist/browser && http-server",
    "serve:ssr": "node dist/server/start.js",
    "deploy:dev": "serverless deploy",
    "deploy:prod": "serverless deploy --stage prod"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.0.0",
    "@angular/common": "^5.0.0",
    "@angular/compiler": "^5.0.0",
    "@angular/core": "^5.0.0",
    "@angular/forms": "^5.0.0",
    "@angular/http": "^5.0.0",
    "@angular/platform-browser": "^5.0.0",
    "@angular/platform-browser-dynamic": "^5.0.0",
    "@angular/platform-server": "^5.0.0",
    "@angular/router": "^5.0.0",
    "@nguniversal/express-engine": "^5.0.0-beta.5",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.5",
    "@types/aws-serverless-express": "^2.1.2",
    "aws-serverless-express": "^3.0.2",
    "copy-webpack-plugin": "^4.3.1",
    "core-js": "^2.4.1",
    "rxjs": "^5.5.2",
    "serverless": "^1.25.0",
    "serverless-webpack": "^4.2.0",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "^1.5.0",
    "@angular/compiler-cli": "^5.0.0",
    "@angular/language-service": "^5.0.0",
    "@types/node": "^8.0.30",
    "cpy-cli": "^1.0.1",
    "express": "^4.15.2",
    "http-server": "^0.10.0",
    "reflect-metadata": "^0.1.10",
    "ts-loader": "^2.3.7",
    "typescript": "~2.4.2"
  }
}
